<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    tools:context=".FirrstFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagek1"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:src="@drawable/k1" />

        <TextView
            android:id="@+id/Time1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Time"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/white1"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/introduce1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/presence_audio_away"
            android:text="@string/introduce"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/brief1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier='1.2'
            android:text="@string/brief11"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/brief1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier='1.2'
            android:text="@string/brief12"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/brief1.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier='1.5'
            android:text="@string/brief13"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>


</FrameLayout>