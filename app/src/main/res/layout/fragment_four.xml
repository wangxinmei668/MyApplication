<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    tools:context=".FourFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagek4"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/k4" />

        <TextView
            android:id="@+id/Time4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Time"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date4"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/white4"
            android:layout_width="match_parent"
            android:layout_height="20sp" />

        <TextView
            android:id="@+id/introduce4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/presence_audio_away"
            android:text="@string/introduce"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/brief4.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier='1.2'
            android:text="@string/brief41"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/brief42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier='1.2'
            android:text="@string/brief42"
            android:textSize="18sp" />

    </LinearLayout>
</FrameLayout>
